.container
  .row
    .col-sm-12
      h1 Login
      .lead Please identify yourself with any of the options bellow

    .col-sm-12
      form.form(name='form', ng-submit='vm.login(form)', novalidate='true')
        .form-group
          label Email
          input.form-control(type='email', name='email', ng-model='vm.user.email', autocomplete='off')
        .form-group
          label Mobile phone
          input.form-control(type='text', name='mobileNumber', ng-model='vm.user.mobileNumber', autocomplete='off')
        .form-group(ng-if='vm.smsId')
          label SMS code
          input.form-control(type='text', name='smsCode', ng-model='vm.smsCode', autocomplete='off')

        .form-group.has-error
          p.help-block(ng-show='form.email.$error.required && form.password.$error.required && vm.submitted')
            | Please enter either your email or mobile phone number
          p.help-block(ng-show='form.smsCode.$error.required && vm.submitted')
            | Please enter the 6-digit code that is sent with sms to the mobile phone
          p.help-block {{ vm.errors.other }}

        div
          button.btn.btn-inverse.btn-lg.btn-login(type='submit')
            | Login
          = ' '
          a.btn.btn-default.btn-lg.btn-register(ui-sref='signup')
            | Register

        hr

        .row
          .col-sm-4.col-md-3
            oauth-buttons(classes='btn-block')

  hr
